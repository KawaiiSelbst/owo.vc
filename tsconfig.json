{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "@/*": ["src/*"]
    },
    "strictNullChecks": true,
    "skipLibCheck": true,
    "lib": [
      "es2020",
      "ESNext"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
